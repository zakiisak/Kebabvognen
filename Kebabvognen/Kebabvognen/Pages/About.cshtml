@page
@model AboutModel
@{
    ViewData["Title"] = "Menu";
}

<br />
<p>Vores menu består primært af vores lækre kebab i pizza brød eller lavet som en durüm.</p>
@{
    Menu[] menus = AdapterManager.GetMenus();
    for (int i = 0; i < menus.Length; i++)
            {

            Menu menu = menus[i];
            <img src="@menu.ImageUrl" style="width:250px;height:250px;" />

            <ul>
                
                @for (int k = 0; k < menu.Ingredients.Count; k++)
                {
                <li>@menu.Ingredients[k].Name</li>
                }
            </ul>

        }
}
